    <!-- <body> -->
    <div class="row mt-3">
        <div class="clo-8 offset-3">

            <h3>
                <%= listing.title %>
            </h3>
        </div>

        <div class="card col-6 offset-3 show-card litsing-card">
            <img src="<%= listing.image%> " class="card-img-top show-image" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <!-- <b>

                        <%= listing.title %> <br>
                    </b> -->
                    <%= listing.description %> <br>
                        &#8377 <%= listing.price.toLocaleString("en-IN") %> <br>
                            <%= listing.location %> <br>
                                <%= listing.country %> <br>
                </p>
            </div>
        </div>
